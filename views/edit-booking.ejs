<%- include("layout") %>

<div class="edit-container">
    <h2>Chỉnh sửa đặt chỗ</h2>
    <form action="/edit/<%= booking.id %>" method="POST" class="edit-form">
        <label for="customerName">Tên khách hàng:</label>
        <input type="text" id="customerName" name="customerName" value="<%= booking.customerName %>" required>

        <label for="date">Ngày:</label>
        <input type="date" id="date" name="date" value="<%= booking.date %>" min="" required>

        <label for="time">Giờ:</label>
        <input type="time" id="time" name="time" value="<%= booking.time %>" required>

        <button type="submit" class="btn-update">Cập nhật</button>
        <a href="/bookings" class="btn-cancel">Hủy</a>
    </form>
</div>

<script>
    // Lấy ngày hôm nay (YYYY-MM-DD)
    const today = new Date().toISOString().split("T")[0];

    // Cập nhật giá trị min cho input ngày
    document.getElementById("date").setAttribute("min", today);
</script>
